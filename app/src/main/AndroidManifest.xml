<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.maurosantos.android.posologia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.maurosantos.android.posologia.PessoaActivity"
            android:label="@string/app_title_pessoa" />
        <activity
            android:name="br.com.maurosantos.android.posologia.MedicamentoActivity"
            android:label="@string/app_title_medicamento" />
        <activity
            android:name="br.com.maurosantos.android.posologia.PosologiaActivity"
            android:label="@string/app_title_posologia" />
        <activity
            android:name="br.com.maurosantos.android.posologia.PessoaNewActivity"
            android:label="@string/app_title_pessoa_new" />
    </application>

</manifest>